<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LimeHdTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/windowBackground</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_blue</item>
        <item name="colorSecondaryVariant">@color/primary_blue</item>
        <item name="colorOnSecondary">@color/windowBackground</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/secondaryBackground</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize4dp" parent="">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="Theme.LimeHdTest.Text">
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Theme.LimeHdTest.Text.Title" parent="Theme.LimeHdTest.Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.LimeHdTest.Text.Subtitle" parent="Theme.LimeHdTest.Text">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="Theme.LimeHdTest.Text.TitlePlayer" parent="Theme.LimeHdTest.Text.Title">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.LimeHdTest.Text.SubtitlePlayer" parent="Theme.LimeHdTest.Text.Subtitle">
        <item name="android:textSize">16sp</item>
    </style>

</resources>